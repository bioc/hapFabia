citHeader("To cite package 'hapFabia' in publications use:")

desc <- packageDescription("hapFabia")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
url  <- desc$URL

citEntry(entry="article",
         title="{HapFABIA}: Identification of very short segments of identity by descent characterized by rare variants in large sequencing data",
         author=personList(as.person("Sepp Hochreiter")),
         journal="Nucleic Acids Research",
         volume="",
         number="",
         pages="",
         note="doi:10.1093/nar/gkt1013",
         year="2013",
         textVersion =
             paste("S. Hochreiter,",
                   "HapFABIA: Identification of very short segments of identity by descent characterized by rare variants in large sequencing data",
                   "Nucleic Acids Research, 2013, doi: 10.1093/nar/gkt1013."))

citFooter("To obtain the references in BibTex format, enter",
          "'toBibtex(citation(\"hapFabia\"))'")
